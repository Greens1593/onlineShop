{{#if editError}}
    <p class="alert">{{editError}}</p>
{{/if}}

<h1>Редактировать курс {{course.title}}</h1>

<form action="/courses/edit" method="POST">

    <div class="input-field col s6">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field col s6">
        <input id="price" name="price" type="number" class="validate" required min="0" value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field col s6">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите путь к картинке"></span>
    </div>
<input type="hidden" name="id" value="{{course.id}}">
<input type="hidden" name="_csrf" value="{{csrf}}">

<button type="submit" class="btn btn-primary">Редактировать курс</button>
</form>

<div class="delet-button">
<form action="/courses/delet" method="POST">
<input type="hidden" name="id" value="{{course.id}}">
<input type="hidden" name="_csrf" value="{{csrf}}">
<button class="waves-effect waves-teal btn-flat">Удалить курс</button>
</form>
</div>